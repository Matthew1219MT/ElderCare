<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.eldercare.eldercare.viewmodel.FaceScanViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9D4CC">

        <!-- Main Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="22dp">

            <!-- Header Section (Same as Disclaimer) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <!-- Back button -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:layout_alignParentStart="true"
                    app:tint="#000000" />

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eldercare_textlogo"
                    android:contentDescription="ElderCare Logo"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <!-- Camera Window Container -->
            <FrameLayout
                android:layout_width="331dp"
                android:layout_height="598dp"
                android:layout_marginTop="81dp"
                android:layout_marginStart="14dp"
                android:background="#D9D9D9">

                <!-- ARCore Surface View (for ARCore mode) -->
                <android.opengl.GLSurfaceView
                    android:id="@+id/surfaceView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- Camera Preview Container (for ML Kit mode) -->
                <FrameLayout
                    android:id="@+id/cameraPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <TextureView
                        android:id="@+id/textureView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <!-- Face Scan Guide Overlay (Optional) -->
                <ImageView
                    android:id="@+id/faceScanGuide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/face_scan_overlay"
                    android:contentDescription="Face scan guide"
                    android:visibility="gone"
                    android:alpha="0.6" />

                <!-- Status Text Overlay -->
                <TextView
                    android:id="@+id/tvScanStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position your face in the frame"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="@font/font_regular"
                    android:background="#80000000"
                    android:padding="8dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_margin="16dp"
                    android:visibility="gone" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="#BF5F56"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <!-- Take Photo Button (Positioned Absolutely) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnStartScan"
                android:layout_width="146dp"
                android:layout_height="80dp"
                android:layout_marginTop="697dp"
                android:layout_marginStart="107dp"
                android:text="Take Photo"
                android:textColor="#FFFFFF"
                android:textSize="22.25sp"
                android:fontFamily="@font/font_regular"
                android:textAllCaps="false"
                android:backgroundTint="#BF5F56"
                android:letterSpacing="0"
                android:lineSpacingMultiplier="1.0"
                app:cornerRadius="20dp" />

            <!-- Hidden Buttons (for later states) -->
            <Button
                android:id="@+id/btnViewResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="32dp"
                android:text="View Result"
                android:backgroundTint="#BF5F56"
                android:fontFamily="@font/font_regular"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="100dp"
                android:text="Upload"
                android:backgroundTint="#BF5F56"
                android:fontFamily="@font/font_regular"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Hidden Scan Method Indicator (for debugging) -->
        <TextView
            android:id="@+id/tvScanMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="8dp"
            android:text="SCAN_METHOD"
            android:textColor="#000000"
            android:textSize="10sp"
            android:fontFamily="@font/font_regular"
            android:visibility="gone" />

    </FrameLayout>

</layout>