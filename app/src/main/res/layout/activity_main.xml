<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homepageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D4CC"
    android:orientation="vertical"
    android:padding="22dp">

    <!-- App Logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:src="@drawable/eldercare_textlogo"
        android:contentDescription="ElderCare Logo"
        android:layout_marginTop="15dp"/>

    <!-- Home Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Home"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="@font/font_bold" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back, John Smith."
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/font_regular" />

    <!-- Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/font_bold"
        android:textColor="@android:color/black" />

    <!-- Facial Analysis -->
    <androidx.cardview.widget.CardView
        android:id="@+id/facial_analysis_btn"
        android:fontFamily="@font/font_bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#D99484">

        <TextView
            android:fontFamily="@font/font_bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Facial Analysis"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </androidx.cardview.widget.CardView>

    <!-- Emergency -->
    <androidx.cardview.widget.CardView
        android:id="@+id/emergency_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#BF5F56">

        <TextView
            android:id="@+id/emergencyCardText"
            android:fontFamily="@font/font_bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SOS"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </androidx.cardview.widget.CardView>

    <!-- AI Doctor -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#ADD2F3">

        <TextView
            android:fontFamily="@font/font_bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Emergency Services"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </androidx.cardview.widget.CardView>

    <!-- AI Doctor -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ai_doctor_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#709BC0">

        <TextView
            android:fontFamily="@font/font_bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ask an AI Doctor"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>