<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homepageScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D4CC"
    android:padding="22dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp"> <!-- tambahkan paddingBottom -->

        <!-- Top Bar dengan Logo dan Language Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/eldercare_textlogo"
                android:contentDescription="@string/app_name" />

            <ImageButton
                android:id="@+id/btn_language"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/change_language"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_language"
                android:tint="@android:color/black" />
        </RelativeLayout>

        <!-- Judul Home -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/home"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="@font/font_bold" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/font_regular" />

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/services"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/font_bold"
            android:textColor="@android:color/black" />

        <!-- CardViews -->
        <androidx.cardview.widget.CardView
            android:id="@+id/facial_analysis_btn"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#D99484">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/facial_analysis"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/emergency_btn"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#BF5F56">

            <TextView
                android:id="@+id/emergencyCardText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/sos"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/emergency_services"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#ADD2F3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/emergency_services"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ai_doctor_btn"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#709BC0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ai_doctor"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_bold"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
