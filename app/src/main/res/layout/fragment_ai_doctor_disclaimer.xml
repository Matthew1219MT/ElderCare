<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D9D4CC"
    android:padding="22dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_alignParentStart="true"
            app:tint="#000000" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eldercare_textlogo"
            android:contentDescription="ElderCare Logo"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Disclaimer"
        android:textAlignment="center"
        android:textColor="#8C2E2E"
        android:textSize="35sp"
        android:fontFamily="@font/font_extrabold"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:gravity="center" />

    <!-- Disclaimer -->
    <TextView
        android:id="@+id/disclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ElderCare AI uses open-source AI technology to provide quick health advice. This feature is not a substitute for professional medical care. ElderCare is not liable for decisions made based on this tool. Always consult a qualified healthcare professional for medical concerns."
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="24sp"
        android:fontFamily="@font/font_regular"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="0dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/decline_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Decline"
            android:backgroundTint="#BF5F56"
            android:fontFamily="@font/font_regular"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/understand_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accept"
            android:backgroundTint="#BF5F56"
            android:fontFamily="@font/font_regular"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
